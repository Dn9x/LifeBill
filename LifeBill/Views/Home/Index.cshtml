@{
    ViewBag.Title = "Home Page";
}


<div style="margin:2px auto; border:1px solid #ccc; width:90%; min-width:812px; height:26px;">
    <div style="width:50px; height:22px; line-height:22px; float:left; text-align:center; margin:2px auto;">
    <a href="/Home/Index?@ViewBag.Up">后退</a>
    </div>
    <div style="width:100px; height:22px; line-height:22px; float:left; text-align:center; margin:2px auto;">@ViewBag.Date</div>
    <div style="width:50px; height:22px; line-height:22px; float:left; text-align:center; margin:2px auto;">
    <a href="/Home/Index?@ViewBag.Down">前进</a>
    </div>
    <div style="width:200px; height:22px; line-height:22px; float:right; text-align:center; margin:2px auto;">
    <embed src="@Url.Content("~/Content/free-flash-clock.swf")" width="100" height="22" wmode="transparent" type="application/x-shockwave-flash"></embed>
    </div>
</div>
<div style="margin:10px auto; border:1px solid #ccc; width:90%; min-width:812px; height:auto;">

<table style="width:100%" cellspacing="0">
    <thead>
        <tr>
            <th style="text-align:center;">星期一</th>
            <th style="text-align:center;">星期二</th>
            <th style="text-align:center;">星期三</th>
            <th style="text-align:center;">星期四</th>
            <th style="text-align:center;">星期五</th>
            <th style="text-align:center;">星期六</th>
            <th style="text-align:center;">星期天</th>
        </tr>
    </thead>
    <tbody>
        @Html.Raw(ViewBag.Message)
    </tbody>
</table>

</div>