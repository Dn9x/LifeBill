<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.2.min.js")" type="text/javascript"></script>
    <style type="text/css">
        body
        {
        	margin:0px;
        	padding:0px;
        	background-color: #ffffff;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-image: url("@Url.Content("~/Content/Images/wallpaper1.jpg")");
            background-size: cover;
        }

        .page
        {
        	width:700px;
            height:400px;
            margin:10% auto 0px auto;
            border:0px solid #ccc;
            background-color:transparent;
        }
        
        #logo
        {
        	width:99%;
        	height:100px;
        	line-height:100px;
        	margin:52px auto 2px auto;
            font-size:82px;
            font-weight:400;
            font-family:Verdana, Arial Black;
            color:#ffffff;
        	text-align:center;
            background-color:transparent;
            display:none;
        }
        
        #font
        {
        	width:99%;
        	height:120px;
        	line-height:120px;
        	margin:2px auto 50px auto;
            font-size:18px;
            font-family:Verdana, Arial Black;
            color:#ffffff;
        	text-align:right;
            background-color:transparent;
            display:none;
        }
        
        #login
        {
        	width:99%;
        	height:80px;
        	line-height:80px;
        	margin:2px auto;
            background-color:transparent;
            text-align:center;
        }
        
        .text
        {
        	width:200px;
        	height:30px;
        	line-height:30px;
            color:#ffffff;
            font-size:16px;
            border:0px solid #ccc;
            border-bottom: 1px solid #efefdf;
            background-color:transparent;
        }
        
        .button
        {
        	width:100px;
        	height:38px;
        	border-radius:3px;
        	color:#fff;
        	border:1px solid #84af00;
        	background-color:#84af00;
        }
    </style>
</head>
<body>
    <div class="page">
        @RenderBody()
    </div>

    <script type="text/javascript">
        function check() {
            if ($("input[name='name']").val().length == 0) {
                $("input[name='name']").val("请输入用户名").css("color", "#CC0033");

                return false;
            }

            if ($("input[name='pswd']").val().length == 0) {
                alert('请输入用户密码');

                return false;
            }

            return true;
        }
    </script>
</body>
</html>
